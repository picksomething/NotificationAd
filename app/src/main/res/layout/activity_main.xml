<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/addNormalNotify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_normal_notify"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/addMultiIconNotify" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_multi_icon_notify"
        android:id="@+id/addMultiIconNotify"
        android:layout_above="@+id/addBannerNotify"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel_all_notify"
        android:id="@+id/cancelAllNotify"
        android:layout_above="@+id/addNormalNotify"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_banner_notify"
        android:id="@+id/addBannerNotify"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
